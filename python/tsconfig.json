{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "./scripts",
        "rootDir": "./scripts",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": false,
        "noImplicitAny": false
    },
    "include": [
        "scripts/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}